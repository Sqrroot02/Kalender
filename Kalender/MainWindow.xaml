<Window
    x:Class="Kalender.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Kalender.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Kalender"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <!--  SideMenu  -->
        <!--<DockPanel x:Name="dop_SideMenu" Width="200" />-->
        <DockPanel Grid.Column="2" DockPanel.Dock="Left">
            <!--  Calender View Options  -->
            <DockPanel Height="40" DockPanel.Dock="Top" />
            <!--  Calender View  -->
            <Frame x:Name="frm_CalenderView" DockPanel.Dock="Top" />
        </DockPanel>
        <!--  Appointment View  -->
        <ScrollViewer
            Grid.Column="0"
            Width="300"
            HorizontalAlignment="Right"
            Background="White">
            <ScrollViewer.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="-90"
                    Opacity="0.5"
                    ShadowDepth="1" />
            </ScrollViewer.Effect>
            <StackPanel
                x:Name="dop_AppointmentPanel"
                Orientation="Vertical"
                ScrollViewer.VerticalScrollBarVisibility="Visible">
                <TextBlock
                    Height="30"
                    Margin="5"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Appointments" />
                <ListBox
                    x:Name="lib_Appointments"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    DockPanel.Dock="Top"
                    ItemsSource="{Binding DayAppointments}"
                    SelectedItem="{Binding SelectedAppointment}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Transparent" CornerRadius="2">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding AppointmentColor}" />
                                </Border.Background>
                                <DockPanel>
                                    <TextBlock HorizontalAlignment="Left" DockPanel.Dock="Left">
                                        <Run Text="{Binding HourStart}" />
                                        <Run Text=":" />
                                        <Run Text="{Binding MinuteStart}" />
                                    </TextBlock>
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        DockPanel.Dock="Left"
                                        Text="{Binding Title}" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button
                    Height="35"
                    Margin="5,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Command="{Binding AddCommand}"
                    Content="Add New"
                    DockPanel.Dock="Top"
                    FontSize="14" />

                <!--  New Appointment View  -->
                <DockPanel Margin="5" DockPanel.Dock="Top">
                    <DockPanel Height="30" DockPanel.Dock="Top">
                        <TextBlock VerticalAlignment="Center" Text="Title: " />
                        <TextBox
                            Name="txb_NewAppTitle"
                            Height="20"
                            Margin="5"
                            Text="{Binding SelectedAppointment.Title, Mode=TwoWay}" />
                    </DockPanel>
                    <GroupBox
                        Height="170"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Top"
                        Header="Times">
                        <StackPanel>
                            <DockPanel Height="40" VerticalAlignment="Top">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="  Date:  " />
                                <DatePicker Height="30" SelectedDate="{Binding SelectedAppointment.Date}" />
                            </DockPanel>
                            <DockPanel Height="20">
                                <TextBlock Text="  Whole Day?: " />
                                <CheckBox Margin="5,0,0,0" VerticalAlignment="Center" />
                            </DockPanel>
                            <DockPanel Height="40" VerticalAlignment="Top">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="  Hour Start:  " />
                                <TextBox
                                    x:Name="txb_NewAppHourStart"
                                    Width="30"
                                    Height="20"
                                    HorizontalAlignment="Left"
                                    Text="{Binding SelectedAppointment.HourStart}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="  Minute Start:  " />
                                <TextBox
                                    x:Name="txb_NewAppMinuteStart"
                                    Width="30"
                                    Height="20"
                                    HorizontalAlignment="Left"
                                    Text="{Binding SelectedAppointment.MinuteStart}" />
                            </DockPanel>
                            <DockPanel Height="40" VerticalAlignment="Top">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="  Hour End:  " />
                                <TextBox
                                    x:Name="txb_NewAppHourEnd"
                                    Width="30"
                                    Height="20"
                                    HorizontalAlignment="Left"
                                    Text="{Binding SelectedAppointment.HourEnd}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="  Minute End:  " />
                                <TextBox
                                    x:Name="txb_NewAppMinuteEnd"
                                    Width="30"
                                    Height="20"
                                    HorizontalAlignment="Left"
                                    Text="{Binding SelectedAppointment.MinuteEnd}" />
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>
                    <DockPanel Height="30" DockPanel.Dock="Top">
                        <TextBlock VerticalAlignment="Center" Text="  Place:  " />
                        <TextBox
                            x:Name="txb_NewAppPlace"
                            Height="20"
                            Text="{Binding SelectedAppointment.Location}" />
                    </DockPanel>
                    <DockPanel
                        Height="100"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Top">
                        <TextBlock VerticalAlignment="Top" Text="  Description:  " />
                        <TextBox
                            x:Name="txb_NewAppDescription"
                            Height="100"
                            FontSize="12"
                            Text="{Binding SelectedAppointment.Description}"
                            TextWrapping="Wrap" />
                    </DockPanel>
                    <DockPanel>
                        <Button
                            Width="200"
                            Height="35"
                            Margin="5,10"
                            VerticalAlignment="Top"
                            Command="{Binding ApplyCommand}"
                            Content="Apply"
                            DockPanel.Dock="Left"
                            FontSize="14" />
                        <Button
                            Width="40"
                            Height="35"
                            Command="{Binding DeleteCommand}"
                            Content="Del"
                            DockPanel.Dock="Left" />
                    </DockPanel>

                </DockPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
