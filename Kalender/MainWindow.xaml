<Window
    x:Class="Kalender.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Kalender.View.Controls"
    xmlns:converter="clr-namespace:Kalender.View.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Kalender"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Calender"
    Width="1200"
    Height="800"
    MinWidth="900"
    MinHeight="500"
    SnapsToDevicePixels="True"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:BoolReverseConverter x:Key="boolRevConv" />
        <converter:BoolReverseVisibilityConverter x:Key="boolVisConv" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!--  SideMenu  -->
        <!--<DockPanel x:Name="dop_SideMenu" Width="200" />-->
        <DockPanel Grid.Column="1" DockPanel.Dock="Left">
            <!--  Calender View Options  -->
            <DockPanel Height="40" DockPanel.Dock="Top">
                <TextBlock
                    Height="30"
                    Margin="5"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Left"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Calendar " />
                <Button
                    x:Name="btn_ExpandSettings"
                    Width="100"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Click="btn_ExpandSettings_Click"
                    Content="Settings"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource ButtonStyle}" />
                <Button
                    x:Name="btn_DayView"
                    Width="100"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Click="btn_DayView_Click"
                    Content="Day"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource ButtonStyle}" />
                <Button
                    x:Name="btn_MonthView"
                    Width="100"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Click="btn_MonthView_Click"
                    Content="Month"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource ButtonStyle}" />
            </DockPanel>
            <!--  Calender View  -->
            <Frame
                x:Name="frm_CalenderView"
                DockPanel.Dock="Top"
                NavigationUIVisibility="Hidden" />
        </DockPanel>
        <!--  Appointment View  -->       
        <ScrollViewer
            Grid.Column="3"
            x:Name="scv_OptionsPanel"
            Width="300"
            HorizontalAlignment="Right"
            Background="White"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="-90"
                    Opacity="0.5"
                    ShadowDepth="2" />
            </ScrollViewer.Effect>
            <StackPanel>
                <Expander IsExpanded="True" HorizontalAlignment="Stretch">
                    <Expander.Header>
                        <DockPanel HorizontalAlignment="Stretch">
                            <TextBlock
                                Height="30"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Left"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="Black"
                                Text="Appointments" />
                            
                        </DockPanel>
                    </Expander.Header>
                    <StackPanel
                        x:Name="dop_AppointmentPanel"
                        Orientation="Vertical"
                        ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListBox
                            x:Name="lib_Appointments"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding DayAppointments}"
                            SelectedItem="{Binding SelectedAppointment}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Background="{Binding AppoinmentBrush}"
                                        BorderBrush="Transparent"
                                        CornerRadius="2">
                                        <DockPanel>
                                            <TextBlock
                                                Margin="5,0,5,0"
                                                HorizontalAlignment="Left"
                                                DockPanel.Dock="Left"
                                                Text="{Binding Title}" />
                                            <TextBlock
                                                Margin="3,0,5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                FontSize="9"
                                                Text="{Binding TimeSpan}"
                                                Visibility="{Binding FullTime, Converter={StaticResource boolVisConv}}" />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>


                        <!--  New Appointment View  -->
                        <DockPanel
                            Margin="5"
                            DockPanel.Dock="Top"
                            Visibility="{Binding AppointmentOptionVisibility, Mode=TwoWay}">
                            <TextBlock
                                Height="20"
                                Margin="5"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="Black"
                                Text="Details" />
                            <DockPanel Height="30" DockPanel.Dock="Top">
                                <TextBlock VerticalAlignment="Center" Text="Title: " />
                                <TextBox
                                    Name="txb_NewAppTitle"
                                    Height="20"
                                    Margin="5"
                                    Style="{DynamicResource TextBoxStyle}"
                                    Text="{Binding SelectedAppointment.Title, Mode=TwoWay}" />
                            </DockPanel>
                            <GroupBox
                                Height="170"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top"
                                Header="Times">
                                <StackPanel>
                                    <DockPanel Height="40" VerticalAlignment="Top">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Text="  Date:  " />
                                        <DatePicker Height="30" SelectedDate="{Binding SelectedAppointment.Date}" />
                                    </DockPanel>
                                    <DockPanel Height="20">
                                        <TextBlock Text="  Whole Day?: " />
                                        <CheckBox
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding SelectedAppointment.FullTime, Mode=TwoWay}" />
                                    </DockPanel>
                                    <DockPanel
                                        Height="40"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding SelectedAppointment.FullTime, Converter={StaticResource boolRevConv}}">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Text="  Hour Start:  " />
                                        <TextBox
                                            x:Name="txb_NewAppHourStart"
                                            Width="30"
                                            Height="20"
                                            HorizontalAlignment="Left"
                                            PreviewTextInput="txb_NewAppMinuteStart_PreviewTextInput"
                                            Style="{DynamicResource TextBoxStyle}"
                                            Text="{Binding SelectedAppointment.HourStart}" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Text="  Minute Start:  " />
                                        <TextBox
                                            x:Name="txb_NewAppMinuteStart"
                                            Width="30"
                                            Height="20"
                                            HorizontalAlignment="Left"
                                            PreviewTextInput="txb_NewAppMinuteStart_PreviewTextInput"
                                            Style="{DynamicResource TextBoxStyle}"
                                            Text="{Binding SelectedAppointment.MinuteStart}" />
                                    </DockPanel>
                                    <DockPanel
                                        Height="40"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding SelectedAppointment.FullTime, Converter={StaticResource boolRevConv}}">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Text="  Hour End:  " />
                                        <TextBox
                                            x:Name="txb_NewAppHourEnd"
                                            Width="30"
                                            Height="20"
                                            HorizontalAlignment="Left"
                                            PreviewTextInput="txb_NewAppMinuteStart_PreviewTextInput"
                                            Style="{DynamicResource TextBoxStyle}"
                                            Text="{Binding SelectedAppointment.HourEnd}" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            Text="  Minute End:  " />
                                        <TextBox
                                            x:Name="txb_NewAppMinuteEnd"
                                            Width="30"
                                            Height="20"
                                            HorizontalAlignment="Left"
                                            PreviewTextInput="txb_NewAppMinuteStart_PreviewTextInput"
                                            Style="{DynamicResource TextBoxStyle}"
                                            Text="{Binding SelectedAppointment.MinuteEnd}" />
                                    </DockPanel>
                                </StackPanel>
                            </GroupBox>
                            <DockPanel Height="30" DockPanel.Dock="Top">
                                <TextBlock VerticalAlignment="Center" Text="  Place:  " />
                                <TextBox
                                    x:Name="txb_NewAppPlace"
                                    Height="20"
                                    Style="{DynamicResource TextBoxStyle}"
                                    Text="{Binding SelectedAppointment.Location}" />
                            </DockPanel>
                            <DockPanel
                                Height="100"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top">
                                <TextBlock VerticalAlignment="Top" Text="  Description:  " />
                                <TextBox
                                    x:Name="txb_NewAppDescription"
                                    Height="100"
                                    FontSize="12"
                                    Text="{Binding SelectedAppointment.Description}"
                                    TextWrapping="Wrap" />
                            </DockPanel>
                            <DockPanel
                                Height="40"
                                Margin="0,5,0,0"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top">
                                <TextBlock VerticalAlignment="Top" Text="  Calender: " />
                                <ComboBox
                                    Height="20"
                                    VerticalAlignment="Top"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Calendars}"
                                    SelectedValue="{Binding SelectedAppointment.CalenderId, Mode=TwoWay}"
                                    SelectedValuePath="CalendarId" />
                            </DockPanel>
                            <DockPanel>
                                <!--<Button
                                    Width="200"
                                    Height="35"
                                    Margin="5,10"
                                    VerticalAlignment="Top"
                                    Command="{Binding ApplyCommand}"
                                    Content="Apply"
                                    DockPanel.Dock="Left"
                                    FontSize="14"
                                    Style="{DynamicResource ButtonStyle}" />-->

                                <Button
                                    Width="80"
                                    Height="35"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    Command="{Binding DeleteCommand}"
                                    Content="Delete"
                                    DockPanel.Dock="Left"
                                    Style="{DynamicResource ButtonStyle}" />
                            </DockPanel>
                        </DockPanel>
                        <Button
                            Width="160"
                            Height="35"
                            Margin="5,10"
                            VerticalAlignment="Top"
                            Command="{Binding AddCommand}"
                            Content="New Appoinment"
                            DockPanel.Dock="Left"
                            FontSize="14"
                            Style="{DynamicResource ButtonStyle}" />
                    </StackPanel>
                </Expander>

                <!--  Kalender Liste  -->
                <Expander IsExpanded="True">
                    <Expander.Header>
                        <TextBlock
                            Height="30"
                            Margin="5"
                            VerticalAlignment="Top"
                            DockPanel.Dock="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="Black"
                            Text="Calenders" />
                    </Expander.Header>
                    <DockPanel x:Name="dop_CalenderSettings">
                        <ListBox
                            VerticalAlignment="Top"
                            BorderBrush="Transparent"
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding Calendars}"
                            SelectedItem="{Binding SelectedCalender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Height="25"
                                        BorderBrush="Transparent"
                                        CornerRadius="2">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Color}" />
                                        </Border.Background>
                                        <DockPanel Margin="2">
                                            <TextBox
                                                Margin="2,0,2,0"
                                                HorizontalAlignment="Left"
                                                DockPanel.Dock="Left"
                                                Style="{DynamicResource TextBoxStyle}"
                                                Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button
                            x:Name="btn_NewCalender"
                            Width="160"
                            Height="35"
                            Margin="3"
                            Command="{Binding NewCalenderCommand}"
                            Content="New Calender"
                            DockPanel.Dock="Left"
                            Style="{DynamicResource ButtonStyle}" />
                        <Button
                            x:Name="btn_DeleteCalender"
                            Width="80"
                            Height="35"
                            Margin="3"
                            Command="{Binding DeleteCalenderCommand}"
                            Content="Delete"
                            DockPanel.Dock="Left"
                            Style="{DynamicResource ButtonStyle}" />
                    </DockPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
