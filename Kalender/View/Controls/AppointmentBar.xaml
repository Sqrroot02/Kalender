<UserControl x:Class="Kalender.View.Controls.AppointmentBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kalender.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="usc_AppointmentBar">
    <Border CornerRadius="2" Background="{Binding AppointmentColor}">
        <DockPanel Background="Transparent" Margin="2">
            <TextBlock Text="{Binding DateStart.Hour}" DockPanel.Dock="Left" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding Title}" DockPanel.Dock="Left" HorizontalAlignment="Left" Margin="5 0 0 0"/>
        </DockPanel>  
    </Border>
</UserControl>
